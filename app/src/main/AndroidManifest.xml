<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ahmedadeltito.virtualdressingview">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity_0"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PhotoEditorActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_photo_editor"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CheckoutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ThankYouScreen"
            android:screenOrientation="portrait" />


        <activity android:name=".RecommendedActivity" android:screenOrientation="portrait" android:label="Recommended">
        </activity>
        <activity
            android:name=".CropImageActivity"
            android:screenOrientation="portrait" android:label="Crop image">
        </activity>
        <activity
            android:name=".ImageViewActivity"
            android:screenOrientation="portrait" android:label="View image">
        </activity>
        <activity
            android:name=".SelectImageActivity"
            android:screenOrientation="portrait" android:label="Select image">
        </activity>

        <!--<activity
            android:name="com.soundcloud.android.crop.CropImageActivity"
            android:screenOrientation="portrait"/>-->

        <activity
            android:name=".RegistrationActivity"
            android:label="@string/registration"
            android:screenOrientation="portrait">
        </activity>


    </application>

</manifest>